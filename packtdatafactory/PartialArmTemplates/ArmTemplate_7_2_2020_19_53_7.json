{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "packtdatafactory"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Pipeline-Controlflow-HiveTransformation')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "SalesByCountry",
						"type": "HDInsightHive",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"scriptPath": "/queries/hivequery.hql",
							"scriptLinkedService": {
								"referenceName": "PacktStorage",
								"type": "LinkedServiceReference"
							}
						},
						"linkedServiceName": {
							"referenceName": "HDInsightLinkedService",
							"type": "LinkedServiceReference"
						}
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/HDInsightLinkedService')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/HDInsightLinkedService')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "HDInsightOnDemand",
				"typeProperties": {
					"clusterType": "hadoop",
					"clusterSize": 1,
					"timeToLive": "00:15:00",
					"version": "3.6",
					"hostSubscriptionId": "b85b0984-a391-4f22-a832-fb6e46c39f38",
					"clusterResourceGroup": "packtade",
					"servicePrincipalId": "576de443-07c3-49ed-af47-ee7ecfd0d16c",
					"osType": "Linux",
					"tenant": "8a4925a9-fd8e-4866-b31c-f719fb05dce6",
					"clusterNamePrefix": "",
					"clusterUserName": "sshadmin",
					"clusterPassword": {
						"type": "SecureString",
						"value": "**********"
					},
					"clusterSshUserName": "sshadmin",
					"clusterSshPassword": {
						"type": "SecureString",
						"value": "**********"
					},
					"servicePrincipalKey": {
						"type": "SecureString",
						"value": "**********"
					},
					"linkedServiceName": {
						"referenceName": "PacktStorage",
						"type": "LinkedServiceReference"
					},
					"headNodeSize": "",
					"dataNodeSize": "",
					"zookeeperNodeSize": "",
					"subnetName": "",
					"virtualNetworkId": ""
				}
			},
			"dependsOn": []
		}
	]
}